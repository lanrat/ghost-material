{{!< default }}



{{! Blog navbar }}
<nav class="navbar fixed shaded">
  <div class="navbar--row container">
    <!-- Icon -->
    <!-- <div class="navbar--icon"></div> -->
    <!-- Title -->
    <a class="navbar--title" href="{{@blog.url}}">{{@blog.title}}</a>
        <!-- Spacer -->
    <div class="navbar--spacer"></div>

    {{!-- The blog navigation links --}}
    {{> navlinks}}
  </div>
</nav>


{{! Blog header }}
<header class="header shaded bg-darken">
  <!-- Content -->
  <div class="header--content onMiddle container">
    <h1 class="header--title center">{{@blog.title}}</h1>
    <h5 class="header--subtitle center">{{@blog.description}}</h5>
  </div>
  <!-- Background -->
  {{#if @blog.cover}}
    <img class="bg-image" alt="Header" src="{{@blog.cover}}" />
  {{/if}}
</header>


{{! Blog content }}
<main class="content">
  <div class="main--content container">

  {{#foreach posts}}
    {{#if image}}
      <article class="card slide image" itemscope itemtype="https://schema.org/Article">
      <a style="all:unset" href="{{url}}">
      <!-- Header -->
      <header class="card--header bg-darken">
    {{else}}
      <article class="card slide" itemscope itemtype="https://schema.org/Article">
      <a style="all:unset" href="{{url}}">
      <!-- Header -->
      <header class="card--header">
    {{/if}}
        <!-- Title -->
        <h5 class="card--title" itemprop="headline">{{title}}</h5>
        <span class="card--subtitle">
          <i class="fa fa-calendar-o"></i>
          <time datetime="{{date format='YYYY-MM-DD'}}" itemprop="datePublished">
            {{date format='DD MMM YYYY'}}
          </time>
        </span>
        <!-- Image -->
        {{#if image}}<img class="bg-image" alt="" src="{{image}}" />{{/if}}
      </header>
      </a>
      <!-- Content -->
      <a style="all:unset" href="{{url}}">
      <section class="card--main">
        <summary class="card--content" itemprop="articleBody">
          {{excerpt words="50"}}&hellip;
        </summary>
      </section>
      </a>
      <!-- Actions -->
      <footer class="card--actions right">
        <a class="button solid shaded ripple" href="{{url}}">More</a>
      </footer>
    </article>
  {{/foreach}}
  </div>
</main>


{{! Blog pagination }}
{{#if pagination}}{{pagination}}{{/if}}
